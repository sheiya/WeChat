/* pages/comment/comment.wxss */
/*背景图片*/
.detail-container{
  height:400rpx;
  filter:blur(40rpx);  /*模糊滤镜*/
  opacity: .9;         /*透明度*/
}
/*底层,遮罩层*/
.detail-mask{
   position: absolute;
   width:100%;
   height:400rpx;
   background-color:#333;
   top:0;
   left:0;
   z-index: -1;
}
/*电影详情列表*/
.detail-info{
  position: absolute;  /*绝对定位 28*/
  display: flex;       /*弹性布局*/
  top:0;
  left:0;
  width:100%;
  height:400rpx;       /*高度遮罩一样*/
  padding:20rpx;
}
.detail-img{
  width:280rpx;
  height:90%;
  margin-right:24rpx; /*右边文字间距*/
}
/*右侧区域 占满剩余部分*/
.detail{
  flex-grow: 1; /*剩余空间1等分*/
  line-height:60rpx;
}
.detail view{
  color:#fff;
  font-size:24rpx;
}
/*打分*/
.detail  .detail-sc{
  color:#fc0;
  font-size:36rpx;
  font-weight: 700;
}
.desc{
   padding:20rpx;
   font-size:24rpx;
   color:#555;

}
/* 上传图片按钮 */
.custom-class{
  background-color: #07c160;
}
/* 预览的图片 */
.comment-img{
  width:200rpx;
  height: 200rpx;
  margin-right:20rpx;
}

