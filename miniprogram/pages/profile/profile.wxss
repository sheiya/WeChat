/* pages/profile/profile.wxss */
.profile{
  background:#e54847;
  height: 400rpx;
  text-align: center;
  position: relative;
  width:100%;
}
.profile-img{
  width:200rpx;
  height: 200rpx;
  display: block;
  overflow: hidden;
  border-radius: 50%;/*圆角*/
  position: absolute; /*绝对定位*/
  left: 50%;    /*居中*/
  transform: translate(-50%,60rpx);/*居中*/
}
.profile-name{
  font-size: 36rpx;
  color: #fff;
  position: absolute;   /*绝对定位*/
  left: 50%;   /*居中*/
  transform: translate(-50%,270rpx);
}








